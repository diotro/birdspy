<select class="selectpicker"
        name="route-flag"
        id="select-route-flag"
        data-width="100%"
        data-selected-text-format="count > 2"
        data-actions-box="true"
        multiple>
    {% for key, flag in bird_flags %}
        <option value="({{ key }})" data-content="<span class='bgh bgh-{{ flag.label }}'>{{ flag.title }}</span>">{{ flag.title }}</option>
    {% endfor %}
</select>
