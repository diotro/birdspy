<div class="modal fade table-filter" id="modal-filter-bgp-protocols" tabindex="-1" role="dialog"
     aria-labelledby="filter-bgp-protocols-label" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="filter-bgp-protocols-label">{{ 'title.filter_bgp_protocols'|trans }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="{{ 'close'|trans }}">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form class="filter-dt" id="filter-bgp-protocols">
                <div class="modal-body">
                    <div class="form-row">
                        <div class="form-group col-md-8">
                            <label for="peer-name" class="col-form-label">{{ 'label.peer_name'|trans }}</label>
                            <input type="text" class="form-control" name="peer-name" id="peer-name">
                        </div>
                        <div class="form-group col-md-4">
                            <label for="asn" class="col-form-label">{{ 'label.asn'|trans }}</label>
                            <input type="number" class="form-control" name="asn" id="asn">
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-8">
                            <label for="ip-address" class="col-form-label">{{ 'label.ip_address'|trans }}</label>
                            <input type="text" class="form-control" name="ip-address" id="ip-address">
                        </div>
                        <div class="form-group col-md-4">
                            <label for="table" class="col-form-label">{{ 'label.table'|trans }}</label>
                            <input type="text" class="form-control" name="table" id="table">
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-8">
                            <label for="description" class="col-form-label">{{ 'label.description'|trans }}</label>
                            <input type="text" class="form-control" name="description" id="description">
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label for="select-bgp-state">{{ 'label.bgp_state'|trans }}</label>
                            {{ include('server/_select_bgp_state.html.twig') }}
                        </div>
                        <div class="form-group col-md-4">
                            <label for="select-status">{{ 'label.status'|trans }}</label>
                            {{ include('server/_select_bgp_status.html.twig') }}
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="reset" class="btn btn-danger reset">{{ 'reset'|trans }}</button>
                    <button type="reset" class="btn btn-warning mr-auto clear">{{ 'clear'|trans }}</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">{{ 'close'|trans }}</button>
                    <button type="submit" class="btn btn-primary">{{ 'submit'|trans }}</button>
                </div>
            </form>
        </div>
    </div>
</div>
