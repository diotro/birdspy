<select class="selectpicker"
        name="bgp-state"
        id="select-bgp-state"
        data-width="100%"
        data-selected-text-format="count > 1"
        data-actions-box="true"
        multiple>
    <option value="Active" data-content="<span class='bgh bgh-warning'>Active</span>">Active</option>
    <option value="Connect" data-content="<span class='bgh bgh-warning'>Connect</span>">Connect</option>
    <option value="Established" data-content="<span class='bgh bgh-success'>Established</span>">Established</option>
    <option value="Idle" data-content="<span class='bgh bgh-warning'>Idle</span>">Idle</option>
</select>
