#! /usr/bin/env bash

# Birdc wrapper for Bird's Eye

# requires:
#
# parameter $1: either -4 or -6 to chose between birdc and birdc6, or -2 for Bird v2
# parameter $2 $3: -s /path/to/bird/socket
IFS=" "

if [[ "$1" = "-4" ]]; then
    CMD=$(which birdc)
elif [[ "$1" = "-6" ]]; then
    CMD=$(which birdc6)
elif [[ "$1" = "-2" ]]; then
    CMD=$(which birdc)
else
    echo "Bad parameters"
    exit 1
fi

if [[ "$2" != "-s" ]]; then
    echo "Bad parameters"
    exit 1
fi

if [[ ! -S "$3" ]]; then
    echo "Bad parameters - socket does not exist"
    exit 1
fi
SOCKET="$3"

set -- "${@:4}"

$CMD -s $SOCKET -r "$*"
